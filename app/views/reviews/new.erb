<%= simple_form_for [campsite, review],
                    data: {
                      insert_in_list_target: 'form',
                      action: "submit->insert-in-list#send" } do |f| %>
<%= f.input :content, placeholder: 'Add review', as: :text, input_html: { maxlength: 500 } %>
<%= f.input :rating, collection: 0..5, selected: 0, label: 'Rating (0 to 5)' %>
<%= f.button :submit, class: 'btn btn-light' %>
<% end %>
